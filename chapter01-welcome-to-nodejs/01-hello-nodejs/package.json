  "scripts": {
    "start": "node build/index.js",
    "lint": "eslint public/src/",
    "clean": "rm -rf build/",
    "copy": "cp -r public/src/ build/",
    "build": "npm run lint",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy",
