{
  "name": "11-hello-https",
  "version": "0.0.1",
  "description": "HTTPS server and client using server and client certificates",
  "main": "index.js",
  "engines": {
    "node": "8.1.3",
    "npm": "5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sergiofgonzalez/nodejs-in-action.git"
  },
  "keywords": [],
  "author": {
    "name": "Sergio F. Gonzalez",
    "email": "sergio.f.gonzalez@gmail.com"
  },
  "config": {},
  "license": "ISC",
  "devDependencies": {
    "eslint": "4.1.1"
  },
  "dependencies": {},
  "scripts": {
    "setup": "rm -rf node_modules && rm -f package-lock.json && rm -rf .nyc_output coverage && npm install",
    "prestart-server": "npm run lint",
    "prestart-client": "npm run lint",
    "start-server": "DEBUG=${npm_package_config_debugModules:-$npm_package_name} node app/src/https-server.js",
    "start-client": "DEBUG=${npm_package_config_debugModules:-$npm_package_name} node app/src/https-client.js",
    "lint": "node_modules/.bin/eslint app/src/",
    "predebug": "npm run lint",
    "debug-server": "DEBUG=${npm_package_config_debugModules:-$npm_package_name} node --inspect-brk=${npm_config_debugHost:-127.0.0.1} app/src/https-server.js",
    "debug-client": "DEBUG=${npm_package_config_debugModules:-$npm_package_name} node --inspect-brk=${npm_config_debugHost:-127.0.0.1} app/src/https-client.js",    
    "dev": "node_modules/.bin/nodemon --ext js,json,yml --watch app/src --watch .eslintrc.yml --exec 'npm start'",
    "pretest": "./node_modules/.bin/eslint app/tst/",
    "test-native": "node app/tst/countstream.js",
    "test-tap": "tap app/tst/*-tap.js",
    "test-coverage": "tap app/tst/*-tap.js --cov",
    "test-coverage-html": "tap app/tst/*-tap.js --cov --coverage-report=lcov"
  }
}
